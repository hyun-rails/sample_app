<!-- 
   Partial code to render a single user. 
   Used in app/views/users/index.html.erb
   This partial was not automatically generated.
-->
<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>
  
  <!-- If the user is admin, the "delete" link is displayed -->
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>